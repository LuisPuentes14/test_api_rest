@{
    ViewData["Title"] = "Home Page";
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="section">
        <div class="containerForm">
            <form class="form" method="post" asp-action="Login" , asp-controller="Home">
                <div class="spaceUser">
                    <p class="title"></p>
                    <p id="heading">Iniciar sesion</p>
                </div>
                <div class="contaiInput">
                    <div class="field">
                        <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                        </svg>
                        <input id="username" autocomplete="off" placeholder="Username" class="input-field" type="text" name="login" required>
                    </div>
                    <div class="field">
                        <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                             fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z">
                            </path>
                        </svg>
                        <input placeholder="Password" class="input-field" type="password" name="password" required>
                    </div>
                </div>
                <div class="btn">
                    <button class="button1">Login</button>
                </div>
            </form>
        </div>
    </div>
</body>

@{
    if (ViewBag.Message is not null)
    {
        <script>
            alert("@ViewBag.Message");
        </script>
    }
}


<script>


    var usernameInput = document.getElementById('username');
    usernameInput.addEventListener('input', function () {
        this.value = this.value.toUpperCase();
    });
</script>
</html>
